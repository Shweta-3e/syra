@using Syra.Admin.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login to My Chatbots";
}
<head>
    <style>
h3 {
	font-size: 22px;
    font-weight: 300;
    color: #555;
    line-height: 30px;
}
.form-box {
	/*margin-top: 30px;*/
}

.form-top {
	overflow: hidden;
	/*padding: 0 25px 15px 25px;*/
	background: #f3f3f3;
	-moz-border-radius: 4px 4px 0 0; -webkit-border-radius: 4px 4px 0 0; border-radius: 4px 4px 0 0;
	text-align: left;
}

.form-top-left {
	float: left;
	width: 75%;
	padding-top: 25px;
}

.form-top-left h3 { margin-top: 0; }

.form-top-right {
    float: left;
    width: 25%;
    padding-top: 5px;
    font-size: 66px;
    color: #ddd;
    line-height: 100px;
    text-align: right;
    padding-right: 30px;
}
.form-bottom {
    /*padding: 25px 25px 30px 25px;*/
    background: #eee;
    -moz-border-radius: 0 0 4px 4px;
    -webkit-border-radius: 0 0 4px 4px;
    border-radius: 0 0 4px 4px;
    text-align: left;
    height: 250px;
}

.form-bottom form textarea {
	height: 100px;
}

.form-bottom form button.btn {
	width: 100%;
}
#loginForm {
    padding-top: 2%;
}
.form-bottom form .input-error {
	border-color: #19b9e7;
}
        #login-col-sm-6-row {
            margin-left: 25%;
            background-color: #ffffff;
        }

        #login-row {
            background-color: lavender;
        }       
    </style>
</head>
<div class="top-content">
    <div class="inner-bg">
        <div class="container">
            <div class="row" id="login-row">
                <div class="col-sm-6" id="login-col-sm-6-row">
                    <div class="form-box">
                        <div class="form-top">
                            <div class="form-top-left">
                                <h3 style="color:#8e3052;text-align:center">Login to My Chatbots</h3>
                                <p style="text-align:center;">Enter Email and Password to log on</p>
                            </div>
                            <div class="form-top-right">
                                <i class="fa fa-lock"></i>
                            </div>
                        </div>
                        <div class="form-bottom">
                            <section id="registrationForm">
                                @using (Html.BeginForm("Login", "Account", new { @class = "form-horizontal", role = "form" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group" >
                                        <div class="input-container" style="display: -ms-flexbox;display: flex;width: 100%;margin-bottom: 15px;margin-left: 10%;padding-top: 2%;">
                                            <i class="fa fa-envelope icon" style="padding: 10px;background: #8d3052;color: white;min-width: 50px;text-align: center;"></i>
                                            @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control", @style = "width:70%;height: 35px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="input-container" style="display: -ms-flexbox;display: flex;width: 100%;margin-bottom: 15px;margin-left: 10%; padding-top:2%;">
                                            <i class="fa fa-lock icon" style="padding: 10px;background: #8d3052;color: white;min-width: 50px;text-align: center;"></i>
                                            @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", @style = "width:70%;height: 35px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group" id="loginForm">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Login" id="login" class="btn btn-default" style="border-radius:5px;height:20%;font-weight:bold;color:#FFFFFF;margin-left: -13%;background-color: #8d3052;" />
                                        </div>
                                    </div>
                                    <p style="margin-left: 10%;padding-top: 7%;">
                                @Html.ActionLink("Register as a New User", "Register")
                            </p>
                                }
                            </section>
                        </div>
                    </div>
                </div>
                @*<div class="col-sm-1 middle-border"></div>
                <div class="col-sm-1"></div>*@
            </div>
        </div>
    </div>
</div>
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
