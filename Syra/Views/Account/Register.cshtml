@model Syra.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "Register User";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @*<div style="height:20px;"></div>*@
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" ,@style= "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
            
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.JobTitle, "Job Title", new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.TextBoxFor(m => m.JobTitle, new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.Company, "Company", new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.TextBoxFor(m => m.Company, new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.PlanId, "Pricing Plan", new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.DropDownList("PlanId", null, htmlAttributes: new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
            @Html.ValidationMessageFor(model => model.PlanId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        @Html.LabelFor(m => m.BusinessRequirement, "Business Requirements", new { @class = "col-md-2 control-label" })
        <div class="col-md-10" style="height:auto;width:500px;">
            @Html.TextBoxFor(m => m.BusinessRequirement, new { @class = "form-control", @style = "border-radius:5px;-webkit-box-shadow: 0 10px 6px -6px #777;-moz-box-shadow: 0 10px 6px -6px #777;box-shadow: 0 5px 6px -6px #777;" })
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" style="border-radius:5px;height:39px;width:150px;font-weight:bold;color:#FFFFFF;background-color: #b294ae;box-shadow: 0 5px 10px -6px #777;" />
        </div>
    </div>
    <div style="height:20px;"></div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
