            @Html.DisplayFor(modelItem => item.Types)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MonthlyCharge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SetupFees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contract)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SiteSpecification)
        </td>
        
