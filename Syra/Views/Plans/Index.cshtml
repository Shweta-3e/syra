@model IEnumerable<Syra.Admin.Entities.Plan>

@{
    ViewBag.Title = "Index";
}

<h2>Pricing Plans</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
